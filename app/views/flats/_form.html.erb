<div class="formy">


<%= form_for(@flat) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>
  <div class="form-group">
    <%= f.text_field :address, class: 'form-control', placeholder: 'Address' %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
  </div>
  <div class="form-group">
    <%= f.number_field :number_of_guests, class: 'form-control', placeholder: 'Number of Guests', collection:(1..10) %>
  </div>
  <div class="form-group">
    <%= f.number_field :price_per_night, class: 'form-control', placeholder: 'Price per night', collection:(20..100) %>
  </div>
    <%= f.submit class: 'btd-light' %>
  </div>
<% end %>


</div>

